<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="newItem"
            type="com.mmutert.freshfreezer.data.FrozenItem" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_add_item_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="@dimen/add_item_pad_title_top"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@string/add_item_name_title"
                    android:textSize="@dimen/add_item_title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_add_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:hint="@string/add_item_title_hint"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/add_item_pad_left"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@={newItem.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_add_item_name_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_item_name_title" />

                <TextView
                    android:id="@+id/tv_add_frozen_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/et_add_item_frozen_date"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="@dimen/add_item_pad_title_top"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@string/add_item_frozen_date_title"
                    android:textSize="@dimen/add_item_title_size"
                    app:layout_constraintStart_toStartOf="@+id/et_add_item_title"
                    app:layout_constraintTop_toBottomOf="@id/et_add_item_title" />

                <EditText
                    android:id="@+id/et_add_item_frozen_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="8dp"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:paddingBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_add_frozen_date_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_add_frozen_date_title"
                    tools:text="2020-06-01" />

                <TextView
                    android:id="@+id/tv_add_best_before_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/et_add_item_best_before"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="@dimen/add_item_pad_title_top"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@string/add_item_best_before_date_title"
                    android:textSize="@dimen/add_item_title_size"
                    app:layout_constraintBottom_toBottomOf="@+id/et_add_item_best_before"
                    app:layout_constraintStart_toStartOf="@+id/tv_add_frozen_date_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_add_frozen_date_title" />

                <EditText
                    android:id="@+id/et_add_item_best_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="8dp"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:paddingBottom="8dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/et_add_item_frozen_date"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tv_add_frozen_date_title"
                    app:layout_constraintTop_toBottomOf="@+id/et_add_item_frozen_date"
                    tools:text="2020-06-01" />

                <TextView
                    android:id="@+id/tv_add_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/et_add_item_amount"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="@dimen/add_item_pad_title_top"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@string/add_item_amount_title"
                    android:textSize="@dimen/add_item_title_size"
                    app:layout_constraintStart_toStartOf="@+id/tv_add_best_before_date_title"
                    app:layout_constraintTop_toTopOf="@+id/et_add_item_amount" />

                <EditText
                    android:id="@+id/et_add_item_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:ems="10"
                    android:hint="@string/add_item_amount_hint"
                    android:inputType="number"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:selectAllOnFocus="true"
                    android:text="@={`` + newItem.amount}"
                    android:textAlignment="textEnd"
                    app:layout_constraintStart_toEndOf="@+id/tv_add_amount_title"
                    app:layout_constraintTop_toBottomOf="@+id/et_add_item_best_before" />

                <TextView
                    android:id="@+id/tv_add_item_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingTop="@dimen/add_item_pad_title_top"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@string/add_item_description_title"
                    android:textSize="@dimen/add_item_title_size"
                    app:layout_constraintStart_toStartOf="@+id/tv_add_amount_title"
                    app:layout_constraintTop_toBottomOf="@+id/et_add_item_amount" />

                <EditText
                    android:id="@+id/et_add_item_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:hint="@string/add_item_description_hint"
                    android:inputType="textMultiLine"
                    android:paddingStart="@dimen/add_item_pad_left"
                    android:paddingLeft="@dimen/add_item_pad_left"
                    android:paddingEnd="@dimen/add_item_pad_left"
                    android:paddingRight="@dimen/add_item_pad_left"
                    android:text="@={newItem.notes}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_add_item_description_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_add_item_description_title" />

                <Spinner
                    android:id="@+id/sp_add_items_unit_selection"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/et_add_item_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/et_add_item_amount"
                    app:layout_constraintTop_toTopOf="@+id/et_add_item_amount" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_done_24px" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

